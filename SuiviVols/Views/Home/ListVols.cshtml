@model List<SuiviVols.Models.Vol>
@{
    ViewData["Title"] = "ListVols";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <!-- Titre -->
        <div class="col-md-4">
            <div class="booking-cta">
                <h1>Book your flight today</h1>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <div class="booking-form Large">
                <!-- fais un "foreach" sur la recherche -->

                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="row  contenu rounded">

                            <div id="Vol" class="col-md-12 col-sm-12">

                                <div class="form-group col-md-4 col-sm-6">
                                    <span class="form-label">Aéroport de départ</span>
                                    <select asp-for="@item.SelectedDepart" asp-items="@item.AeroportsDepart" class="form-control" disabled>
                                        <option value="-1">Sélectionner une avion</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4 col-sm-6">
                                    <span class="form-label">Aéroport d'arriver</span>
                                    <select asp-for="@item.SelectedArrivee" asp-items="@item.AeroportsArrivee" class="form-control" disabled>
                                        <option value="-1">Sélectionner une avion</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4 col-sm-6">
                                    <span class="form-label">Date</span>
                                    <input type="date" asp-for="@item.DateVol" class="form-control" />
                                </div>
                                <div class="form-group col-md-4 col-sm-6">
                                    <span class="form-label">Avion</span>
                                    <select asp-for="@item.SelectedAvion" asp-items="@item.Avions" class="form-control" disabled>
                                        <option value="-1">Sélectionner une avion</option>
                                    </select>

                                </div>
                                <div class="form-group col-md-4 col-sm-6">
                                    <span class="form-label">Kirosène</span>
                                    <input type="text" asp-for="@item.ConsommationAvion" class="form-control" />
                                </div>
                                <div class="form-group col-md-4 col-sm-6">
                                    <span class="form-label">Distance en Km</span>
                                    <input type="text" asp-for="@item.DistanceBetweenAero" class="form-control" />
                                </div>


                            </div>
                            <div class="col-md-12 col-sm-12">

                                <!-- Buttons Edit & View-->
                                <div class="col-md-offset-10 btnclick">
                                    @*<button type="button" class="btn btn-sm btn btn-light float-right"> View </button>*@
                                    <a href='/Home/UpdateVol?Idvol=@item.IdVol'>Modifier ce vol</a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                        </div>
                    }

                }
                <br />
                <div class=" col-md-3 btnclick">
                    @*<button type="button" class="btn btn-sm btn btn-light float-right"> View </button>*@
                    <a href='/Home/Index'>Créer un autre vol</a>
                </div>
            </div>
        </div>


    </div>
</div>
